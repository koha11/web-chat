extends ../layouts/homeLayout

block content
  section(class="flex justify-center items-center flex-col h-[100vh]")     
    img(src="/images/logo-mess.svg", alt="", srcset="", class="")
    h2(class="py-4 text-3xl font-mono font-bold")
      = "WEB CHAT"
    form(action="/signup", method="post", class="flex flex-col w-[40%] items-center mt-12 gap-4") 
      input(type="text", name="fullname", placeholder="Họ và tên", class="py-2 px-3 border rounded border-gray-400 w-full")
      input(type="text", name="email", placeholder="Địa chỉ email", class="py-2 px-3 border rounded border-gray-400 w-full")
      input(type="text", name="username", placeholder="Tên người dùng", class="py-2 px-3 border rounded border-gray-400 w-full")
      input(type="password", name="password", placeholder="Mật khẩu", class="py-2 px-3 border rounded border-gray-400 w-full")
      button(type="submit", class="bg-blue-700 text-white p-2 cursor-pointer w-[20%] hover:opacity-70 rounded-4xl mt-6") 
        = "Đăng ký"
    hr(class="w-[40%] h-[1px] text-gray-300 mt-4")
    div(class="mt-4 flex items-center justify-evenly w-[50%]")
      a(href="/login", class="cursor-pointer hover:opacity-70")
        = "Đăng nhập"
      a(href="", class="cursor-pointer hover:opacity-70")
        = "Quên mật khẩu"